extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text' placeholder='title' name='title' required='true' value=(message===undefined ? '' : message.title))
    div.form-group
      label(for='text') Text:
      input#text.form-control(type='text' placeholder='text' name='text' required='true' value=(message===undefined ? '' : message.text))
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg

