extends layout

block content
  h1 Become a member

  form(method='POST' action='')
    div.form-group
      label(for='secret_code') Secret Code:
      input#secret_code.form-control(type='text' name='secret_code' value=(secret_code===undefined ? '' : secret_code) )

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

