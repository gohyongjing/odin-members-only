extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(user===undefined ? '' : user.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text' placeholder='Last name' name='last_name' required='true' value=(user===undefined ? '' : user.last_name) )
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email' name='email' value=(user===undefined ? '' : user.email) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' required='true' value=(user===undefined ? '' : user.password) )
      label(for='confirm_password') Confirm Password:
      input#confirm_password.form-control(type='password' name='confirm_password' required='true' value=(confirm_password===undefined ? '' : confirm_password) )

    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg

